{
    "editor.codeActionsOnSave": {
        "source.fixAll.eslint": true
    },
    "[javascript]": { "editor.formatOnSave": true },
    "eslint.validate": [
        "typescript",
        "typescriptreact",
        "html",
        "css",
        "typescriptangular"
    ],
    "editor.tabSize": 2,
    "eslint.options": {
        "extensions": [".ts", ".html"]
    },
}